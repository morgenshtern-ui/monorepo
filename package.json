{
  "name": "@teleskop-labs/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "bump": "taze major -I -r"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "config/*",
    "utils"
  ],
  "devDependencies": {
    "@teleskop-labs/eslint-config": "workspace:*",
    "@teleskop-labs/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "20.10.6",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-ts-patch": "8.56.0-0",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.2.0",
    "npm-run-all2": "6.1.1",
    "prettier": "3.1.0",
    "taze": "0.13.1",
    "turbo": "1.11.2",
    "typescript": "5.3.3",
    "vitest": "1.1.1"
  },
  "dependencies": {
    "consola": "^3.2.3"
  }
}
